    {
      "version": 2,
      "builds": [
        {
          "src": "server.js",
          "use": "@vercel/node"
        },
        {
          "src": "client/package.json",
          "use": "@vercel/static-build",
          "config": {
            "distDir": "client/dist"
          }
        }
      ],
      "rewrites": [
        {
          "source": "/api/(.*)",
          "destination": "/server.js"
        },
        {
          "source": "/(.*)",
          "destination": "/client/dist/$1"
        }
      ]
    }